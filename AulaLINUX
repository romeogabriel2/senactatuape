sudo apt update <-- atualizar a lista do apt 
 
  sudo apt upgrade <-- atualiza todos os software
 
  sudo apt full-upgrade <-- atualiza todos os software
                           atualização completa

  sudo apt dist - upgrade <-- atualiza o sistema operacional
                            Kernel						   

  sudo apt autoremove <-- remoção de software não mais necessário 

  sudo apt autoclean <-- fazer a limpeza do sistema

  sudo reboot <-- reiniciar
  
  sudo apt install <-- instalar aplicativos
  
  sudo apt install psensor
  sudo apt install p7zip-full p7zip-rar
  sudo apt install kazam
  sudo init 0 <-- fecha o linux 
